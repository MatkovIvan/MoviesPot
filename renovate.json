{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".github/workflows/**"
      ],
      "addLabels": [
        "actions"
      ],
      "groupName": "Actions"
    },
    {
      "matchPackageNames": [
        "androidx.*"
      ],
      "addLabels": [
        "androidx"
      ],
      "groupName": "AndroidX"
    },
    {
      "matchPackageNames": [
        "androidx.compose.compiler:compiler",
        "androidx.compose:compose-bom",
        ".*compose.*",
        ".*.accompanist.*",
        "org.jetbrains.kotlin.*:org.jetbrains.kotlin.*"
      ],
      "addLabels": [
        "accompanist",
        "compose",
        "kotlin"
      ],
      "groupName": "Compose&Kotlin"
    }
  ]
}
